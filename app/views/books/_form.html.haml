.form-book
  =form_with(model: @book, local: true) do |form|
    .form-group
      =form.label :name
      =form.text_field :name, class: 'form-control'
    .form-group
      =form.label :author
      =form.text_field :author, class: 'form-control'
      -#=form.collection_select :author, Author.all, :id, :last_name, class: 'form-control'
    .form-group
      =form.label :year
      =form.text_field :year, class: 'form-control'
    .form-group
      =form.label :publishing_house
      =form.text_field :publishing_house, class: 'form-control'
    .form-group
      =form.label :description
      =form.text_area :description, class: 'form-control'
    .form-group
      =form.label :image
      =form.file_field :image, placeholder: 'Choose file'
    =form.submit 'Create book' , class: 'btn btn-primary'