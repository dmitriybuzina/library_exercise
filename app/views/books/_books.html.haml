.row{id: book.id}
  .col-6
    =link_to image_tag(book.image, class: 'book-image'), book_path(book)
  .col-6
    %p
      %strong
        Title:
      =book.name
    %p
      %strong
        Author:
      =book.author
    %p
      %strong
        Publishing house:
      =book.publishing_house if book.publishing_house
    %p
      %strong
        Year:
      =book.year if book.year
    %p
      .row
        =button_to 'Delete', book_path(book), method: :delete, id: 'delete-book', class: 'btn btn-primary', remote: true
        =button_to 'Edit', edit_book_path(book), method: :get, class: 'btn btn-primary'