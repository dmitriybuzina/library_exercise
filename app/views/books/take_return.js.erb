<% if @book.status %>
  document.getElementById("action-book").value = "Take"
  $("#action-book").removeClass('btn-secondary').addClass('btn-primary')
  $("#book-histories table").html("<%= escape_javascript(render 'books/histories', locals: { histories: @histories }) %>")
<% else %>
  document.getElementById("action-book").value = "Return"
  $("#action-book").removeClass('btn-primary').addClass('btn-secondary')
  document.getElementById('book-histories').style.visibility = 'visible'
  $("#book-histories table").html("<%= escape_javascript(render 'books/histories', locals: { histories: @histories }) %>")
<% end %>